<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  
        android:state_enabled="false" >
        <shape>
            <gradient android:angle="315" android:endColor="@color/colorInvalid" android:startColor="@color/colorInvalid" />
            <corners android:radius="@dimen/dp_5" />
        </shape>
    </item>
    <item android:state_pressed="false" >
        <shape>
            <gradient android:angle="315" android:endColor="@color/colorBorrowButtonGradientEnd" android:startColor="@color/colorBorrowButtonGradientStart" />
            <corners android:radius="@dimen/dp_5" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <gradient android:angle="315" android:endColor="@color/colorBorrowButtonGradientSelectEnd" android:startColor="@color/colorBorrowButtonGradientSelectStart" />
            <corners android:radius="@dimen/dp_5" />
        </shape>
    </item>
</selector>