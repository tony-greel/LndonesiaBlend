<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

    </style>

    <!--PrivacyLinkLoadView视图-->
    <style name="MatchAndMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="MatchAndWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="WrapAndWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--PrivacyLinkLoadView视图按钮-->
    <style name="MatchAndWrap.DialogButtonStyle">
        <item name="android:background">@drawable/load_button</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>
    <!-- 自定义Loading Dialog -->
    <style name="loading_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- PictureUploadActivity控件（TextView）样式 -->
    <style name="WrapAndWrap.IdentitySideLabel">
        <item name="android:background">@drawable/shape_label_to_the_side</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/colorSideTextColor</item>
        <item name="android:layout_marginTop">@dimen/dp_15</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_6</item>
        <item name="android:paddingBottom">@dimen/dp_6</item>
    </style>

    <style name="WrapAndWrap.tv_14_style">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_666666</item>
    </style>

    <style name="WrapAndWrap.tv_16_style">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/color_333333</item>
    </style>

    <style name="WrapAndWrap.tv_12_style">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/color_999999</item>
    </style>

    <style name="MatchAndWrap.OtherColourSubmitButtonStyle">
        <item name="android:layout_margin">@dimen/dp_20</item>
        <item name="android:background">@drawable/load_button</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>
</resources>
