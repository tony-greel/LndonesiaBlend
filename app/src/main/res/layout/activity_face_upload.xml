<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchAndMatch"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.upload.FaceUploadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mIvSubmitStateIcon"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_41" />

        <TextView
            android:id="@+id/mTvSubmitStateTitle"
            style="@style/WrapAndWrap.tv_16_style"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="恭喜您，贷款申请已提交成功！"
            android:textColor="@color/colorSubmitSuccessTitle"
            android:visibility="gone" />


        <androidx.cardview.widget.CardView
            android:id="@+id/mCvSubmitProgress"
            style="@style/MatchAndWrap"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_15"
            android:visibility="gone"
            app:cardBackgroundColor="@color/color_FFFFFF"
            app:cardCornerRadius="@dimen/dp_4"
            app:cardElevation="@dimen/dp_1">

            <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/MatchAndWrap"
                android:padding="@dimen/dp_10">

                <ImageView
                    android:id="@+id/mIvProgressState"
                    style="@style/MatchAndWrap"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@mipmap/submit_all_one"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/mTvApplyState"
                    style="@style/WrapAndWrap.tv_12_style"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:padding="@dimen/dp_5"
                    android:text="贷款申请提交"
                    android:textColor="@color/colorSubmitSuccessTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mIvProgressState"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/mTvApprovalState"
                    style="@style/WrapAndWrap.tv_12_style"
                    android:padding="@dimen/dp_5"
                    android:text="待审批"
                    android:textColor="@color/colorSubmitSuccessHighlightTitle"
                    app:layout_constraintLeft_toRightOf="parent"
                    app:layout_constraintRight_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mIvProgressState"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/mTvLoanState"
                    style="@style/WrapAndWrap.tv_12_style"
                    android:layout_marginRight="@dimen/dp_23"
                    android:padding="@dimen/dp_5"
                    android:text="放款"
                    android:textColor="@color/colorSubmitSuccessTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mIvProgressState"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/mTvStateDescribe"
            style="@style/WrapAndWrap.tv_14_style"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_26"
            android:padding="@dimen/dp_10"
            android:text="近期请留意电话以及短信通知，我们会有客服人员联系您"
            android:textColor="@color/colorSubmitSuccessTitle"
            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:id="@+id/mBtDetermine"
        style="@style/MatchAndWrap.OtherColourSubmitButtonStyle"
        android:text="返回主页" />

</LinearLayout>