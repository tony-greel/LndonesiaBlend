<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.upload.IdUploadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/picture_upload_top"
            android:adjustViewBounds="true"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/picture_upload_schedule"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_35"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/picture_upload_bar_two"
            android:layout_marginTop="@dimen/dp_15"/>

        <TextView
            style="@style/WrapAndWrap.IdentitySideLabel"
            android:text="@string/identity_certificate"
            android:textColor="#66CE19"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_gravity="left"/>

        <ImageView
            android:id="@+id/id_upload_one"
            android:layout_width="@dimen/dp_291"
            android:layout_height="@dimen/dp_166"
            android:src="@mipmap/id_upload"
            android:layout_marginTop="@dimen/dp_18"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/id_upload_two"
            android:layout_marginTop="@dimen/dp_18" />

        <ImageView
            android:id="@+id/id_upload_two"
            android:layout_width="@dimen/dp_291"
            android:layout_height="@dimen/dp_166"
            android:src="@mipmap/id_upload_the_other_side"
            android:layout_marginTop="@dimen/dp_18" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/id_upload_three"
            android:layout_marginTop="@dimen/dp_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_10">
            <Button
                android:id="@+id/id_button_return"
                android:layout_width="@dimen/dp_118"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center"
                android:background="@drawable/picture_upload_btn_bg"
                android:textColor="#58CDAB"
                android:text="@string/lndonesia_blend_return"
                android:textSize="@dimen/sp_18" />
            <Button
                android:id="@+id/id_upload_but"
                android:layout_width="@dimen/dp_230"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center"
                android:background="@drawable/picture_upload_btn_bg_two"
                android:textColor="@color/white"
                android:text="@string/next_page"
                android:textSize="@dimen/sp_18"
                android:layout_marginStart="@dimen/dp_12"

               />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:adjustViewBounds="true"
            android:src="@mipmap/picture_upload_tail" />

    </LinearLayout>


</androidx.core.widget.NestedScrollView>